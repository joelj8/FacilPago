<% include ../partials/header %>

<div class = "container">
    <div class= "row">
        <h1 style="text-align: center">Create a New Credit Card</h1>
        <div style="width: 30%; margin: 25px auto;">
             
            <form action="/creditcards" method="POST">
                <div class="form-group">
                    <input class = "form-control" type="number" name="cardnumber" placeholder="Card Number" required>
                </div>
                
                <div class="form-group">
                    <!--<label for="birthday" class="col-xs-3 col-sm-2 control-label">Birthday</label>-->
                    <div class="col-xs-5">
                        <select class="form-control" required name = "monthexpire">
                            <option value="" disabled selected>Month Expire</option>
                            <% meses.months.forEach(function(mes){ %>
                                <option value = "<%= mes.substring(0, 3) %>"><%= mes %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-xs-5">
                        <select class="form-control" required name = "yearexpire">
                            <option value="" disabled selected>Year Expire</option>
                            <% for(i=(new Date()).getFullYear(); i <= ((new Date()).getFullYear() + 10); i++) { %>
                                <option value = "<%= i %>"><%= i %></option>
                            <% } %>                 
                        </select>                        
                    </div>
                 </div>
                
                <div class="form-group">
                    <input class = "form-control" type="text" name="code" placeholder="Code" data-inputmask="'mask': '999'" required>
                </div>

                <div class="form-group"> 
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <div class="text-right">
                <a class="btn btn-xs btn-default" href="/creditcards"> Go Back </a>
            </div>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>